---
layout: project.njk
name: Puritan Financial
---

{%- for project in projects-%}
    {%- if project.title === name -%}


        {# Content Section 1 #}
                {%- for content in project.projectContent.sectionContent-%}
                    {%- if content.sectionNum === "1" -%}
                        {%- include 'project-block-content.njk'-%}
                    {%- endif -%}
                {%- endfor -%}

                <div class="project-block contained-media-with-space container">
                    <iframe src="https://player.vimeo.com/video/352779495" width="1039" height="916" frameborder="0"
                        allow="autoplay; fullscreen" allowfullscreen></iframe>
                </div>

            {# Content Section 2 #}
                {%- for content in project.projectContent.sectionContent-%}
                    {%- if content.sectionNum === "2" -%}
                        {%- include 'project-block-content.njk'-%}
                    {%- endif -%}
                {%- endfor -%}

            {%- for additionalContent in project.projectContent.additionalContent-%}
                        {%- if additionalContent.sectionNum === 2-%}
                             <div class="project-block images-with-description-block container">
                                   <div class="image-grid puritan-image-grid">
                                    {%- for img in additionalContent.images-%}
                                        <img src="{{ img.formats.medium.url }}" alt="{{img.alternativeText}}" />
                                    {%- endfor -%}
                                    </div>       
                        </div>
                        {%- endif -%}
                {%- endfor -%}
                

        {# Content Section 3 #}
                {%- for content in project.projectContent.sectionContent-%}
                    {%- if content.sectionNum === "3" -%}
                        {%- include 'project-block-content.njk'-%}
                    {%- endif -%}
                {%- endfor -%}
            {%- for additionalContent in project.projectContent.additionalContent-%}
                        {%- if additionalContent.sectionNum === 3-%}
                             <div class="project-block images-with-description-block container">
                                   <div class="image-grid puritan-image-grid">
                                    {%- for img in additionalContent.images-%}
                                        <img src="{{ img.formats.medium.url }}" alt="{{img.alternativeText}}" />
                                    {%- endfor -%}
                                    </div>       
                        </div>
                        {%- endif -%}
                {%- endfor -%}
                     

        

        


{%- endif -%}
{%- endfor -%}