{%- for project in projects-%}
    {%- if project.title === name -%}

                {# Content Section 1 #}
                {%- for content in project.projectContent.sectionContent-%}
                    {%- if content.sectionNum === "1" -%}
                        {%- include 'project-block-content.njk'-%}
                    {%- endif -%}
                {%- endfor -%}


                {%- for additionalContent in project.projectContent.additionalContent-%}
                        {%- if additionalContent.sectionNum === 1-%}
                             <div class="project-block images-with-description-block container">
                                    
                                 <div class="process-description">
                                    <h3>{{additionalContent.title}}</h3>
                                    <p>{{additionalContent.description | safe}}</p>
                                </div>
                                   <div class="image-grid">
                                    {%- for img in additionalContent.images-%}
                                        <img src="{{ img.formats.medium.url }}" alt="{{img.alternativeText}}" />
                                    {%- endfor -%}
                                    </div>       
                        </div>
                        {%- endif -%}
                {%- endfor -%}
                

